generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  preferences Json?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  interviews  Interview[]
  answers     Answer[]
}

model Interview {
  id         Int        @id @default(autoincrement())
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  date       DateTime   @default(now())
  topic      String
  difficulty String
  questions  Question[]
}

model Question {
  id           Int        @id @default(autoincrement())
  interview    Interview  @relation(fields: [interviewId], references: [id])
  interviewId  Int
  questionText String
  idealAnswer  String?
  generatedBy  String     @default("AI")
  topic        String
  difficulty   String
  createdAt    DateTime   @default(now())
  answers      Answer[]
}

model Answer {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  question     Question  @relation(fields: [questionId], references: [id])
  questionId   Int
  userResponse String
  score        Int?
  feedback     String?
  createdAt    DateTime  @default(now())
}
